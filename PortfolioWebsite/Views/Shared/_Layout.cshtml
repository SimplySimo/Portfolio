<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Karla" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="main-nav">
        <div class="main-nav-buttonContainer" id="myTopnav">
            <a class="active" onclick="location.href = '@Url.Action("Index", "Home")'">Logo</a>
            <a onclick="location.href = '@Url.Action("Index", "Home")'">Home</a>
            <a onclick="location.href = '@Url.Action("About", "Home")'">About</a>
            <a onclick="location.href = '@Url.Action("AboutMe", "Home")'">About Me</a>
            <a href="javascript:void(0);" class="icon" onclick="expandMenu()"><i class="fa fa-bars"></i></a>
        </div>
    </div>

    <div class="body-content">

        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    </div>
    <div class="footer">
        <p>Ⓒ 2018 - Matthew Leviny</p>
    </div>
</body>
</html>

<script>
    var nav = document.querySelector('.main-nav');
    var position = 0;

    window.addEventListener('scroll', function () {
        if (window.pageYOffset > 100) {
            if (!nav.classList.contains('small')) {
                nav.classList += ' small';
            }
        } else {
            nav.classList = 'main-nav';
        }
    });

    function expandMenu() {
        var x = document.getElementById("myTopnav");
        if (x.className === "main-nav-buttonContainer") {
            x.className += " responsive";
        } else {
            x.className = "main-nav-buttonContainer";
        }
    }
</script>
